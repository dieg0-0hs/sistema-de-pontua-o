
sistemaDePontuação = prompt('Escolha qualquer número!')
if(sistemaDePontuação >= 100){
    alert(`Parábens, você venceu! Sua pontuação foi de ${sistemaDePontuação}!! `)
} else{
    alert('Tente novamente para ganhar')
}



//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

diaDaSemana = prompt('Qual é o dia da semana??');
if(diaDaSemana == 'Sábado'){
    alert('Bom fim de semana!');
} else if (diaDaSemana == 'Domingo'){
    alert('Bom fim de semana');
} else{
    alert('Boa semana!')
}

//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

let saldoDaConta = 500;
alert(`Seu saldo disponível na sua conta é ${saldoDaConta}`)

